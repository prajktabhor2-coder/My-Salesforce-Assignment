							"// Validate required OAuth parameters before sending request",
							"const requiredParams = ['client_id', 'client_secret', 'grant_type', 'username', 'password'];",
							"const bodyParams = pm.request.body.urlencoded.toObject();",
							"",
							"console.log('Validating OAuth request parameters...');",
							"",
							"// Check for missing required parameters",
							"const missingParams = requiredParams.filter(param => !bodyParams[param] || bodyParams[param].trim() === '');",
							"",
							"if (missingParams.length > 0) {",
							"    console.error('Missing required parameters:', missingParams.join(', '));",
							"    throw new Error(`Missing required OAuth parameters: ${missingParams.join(', ')}`);",
							"}",
							"",
							"// Validate grant_type",
							"if (bodyParams.grant_type !== 'password') {",
							"    console.warn(`Grant type is '${bodyParams.grant_type}'. Expected 'password' for this OAuth flow.`);",
							"}",
							"",
							"// Validate email format for username",
							"const emailRegex = /^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/;",
							"if (!emailRegex.test(bodyParams.username)) {",
							"    console.warn('Username does not appear to be a valid email format.');",
							"}",
							"",
							"// Check parameter lengths",
							"if (bodyParams.client_id.length < 20) {",
							"    console.warn('client_id seems too short. Verify it is correct.');",
							"}",
							"",
							"if (bodyParams.client_secret.length < 20) {",
							"    console.warn('client_secret seems too short. Verify it is correct.');",
							"}",
							"",
							"console.log('✓ All required parameters are present');",
							"console.log('Request will be sent to:', pm.request.url.toString());"
